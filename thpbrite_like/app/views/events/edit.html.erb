<div class="content">
<% provide(:title, "Update event") %>
<h1><%= current_user.name.capitalize %>, you could update an event here.</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @event, url: {action: "update"} do |f| %>


      <%= f.label :date %>
      <%= f.date_field :date, class: 'form-control' %>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description, size: "50x3", class: 'form-control' %>

      <br>
      <%= f.label :place %>
      <%= f.text_field :place, size: "20x3", class: 'form-control' %>
      <br>

        <%= f.submit "Send it !", class: "btn btn-primary" %>
      <% end %>
      <br>
  </div>
</div>
</div>
